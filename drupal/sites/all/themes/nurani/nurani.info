name = Nurani
description = "Nurani.org theme based on the Bowerbird theme."
core = "7.x"
engine = phptemplate
base theme = bowerbird

; Existing BowerBird regions (annoyingly this MUST be included)
regions[page_top] = Page top
regions[header] = Header
regions[highlight] = Highlight
regions[help] = Help
regions[content] = Content
regions[sidebar_first] = First sidebar
regions[sidebar_second] = Second sidebar
regions[footer] = Footer
regions[page_bottom] = Page bottom
; New Nurani theme regions
regions[top_strip] = Top strip
regions[content_bottom_left] = Content Bottom left
regions[content_bottom_right] = Content Bottom right

;; Put CSS properties here
stylesheets[all][] = css/core.css

;; Default Nurani theme settings
settings[toggle_logo] = 1
settings[toggle_name] = 0
settings[toggle_slogan] = 0
settings[toggle_node_user_picture] = 1
settings[toggle_comment_user_picture] = 1
settings[toggle_comment_user_verification] = 1
settings[toggle_favicon] = 1
settings[toggle_main_menu] = 1
settings[toggle_secondary_menu] = 1
settings[default_logo] = 1
settings[logo_path] = ''
settings[logo_upload] = ''
settings[default_favicon] = 1
settings[favicon_path] = ''
settings[favicon_upload] = ''
